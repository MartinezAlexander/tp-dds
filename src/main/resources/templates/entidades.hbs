{{#partial "contenido"}}
    <div class="container">
    <br/>
    <form action="/entidades" method="get" class="form-inline">
        <div class="input-group mb-2 mr-sm-2">
            <select class="form-control form-control" id="seleccionar" name="categoria"> <!-- onchange="this.form.submit()" para que filtre sin boton -->

                <option value="0"> todas las categorias </option>

                {{#each categorias}}
                    <option value={{ id }}>{{ nombre }}</option>
                {{/each}}
            </select>
        </div>
        <input type="submit" value="Filtrar" class="btn btn-primary mb-2">
    </form>

    <table class="table table-stripped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Categoria</th>
                <th scope="col">Organizacion</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            {{#each entidades}}
            <tr>
                <td>{{nombreFicticio}}</td>
                <td>{{NombreCategoria}}</td>
                <td>{{NombreOrganizacion}}</td>
                <td> <a class="btn btn-info" href="/entidades/{{id}}"> Ver </a> </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <a class="btn btn-primary" href="/entidades/base/new">Nueva Entidad Base</a>
    <a class="btn btn-primary" href="/entidades/juridica/new">Nueva Entidad Juridica</a>
    </div>
{{/partial}}

{{>layout.hbs}}