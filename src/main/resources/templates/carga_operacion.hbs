        <input type="date" id="input-fecha" name="fecha">

        <p> <br> Medio de Pago </p>
        <select class="form-control form-control" id="sel-medio-pago" name="medio-pago">
            <option> seleccione un medio de pago </option>
        </select>

        <p> <br> Organizacion </p>
        <select class="form-control form-control" id="sel-organizacion" name="organizacion">
            <option> seleccione una orgnizacion </option>
        </select>


        <p> <br> Entidad </p>
        <select class="form-control form-control" id="sel-entidad" name="entidad">
