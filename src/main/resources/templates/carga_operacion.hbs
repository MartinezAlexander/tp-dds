    <form action="carga_operacion" method="post">

        <p> <br> Documento Comercial </p>
        <select class="form-control form-control" id="sel-documento" name="doc-comercial">
            <option> seleccione un documento </option>
        </select>

        <p> <br> Proveedor </p>
        <select class="form-control form-control" id="sel-proveedor" name="proveedor">
            <option> seleccione un proveedor </option>
        </select>

