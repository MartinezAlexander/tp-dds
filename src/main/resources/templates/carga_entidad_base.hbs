{{#partial "contenido"}}
    <div class="container">
    <h1> Nueva Entidad Base </h1>

    <form action="/entidades/base/new" method="post">
        <p> <br> Nombre Ficticio </p>

        <input type="text" name="nombre_ficticio" placeholder="Nombre Ficticio" class="entradas" required>

        <p> <br> Categoria </p>
        <select class="form-control form-control" id="sel-categoria" name="categoria" required> <!-- onchange="this.form.submit()" para que filtre sin boton -->
            <option disabled value="" hidden selected> Seleccione una categoria </option>

            {{#each categorias}}
                <option value={{ id }}>{{ nombre }}</option>
            {{/each}}
        </select>

        <p> <br> Descripcion </p>
        <input type="text" name="descripcion" placeholder="Descripcion" class="entradas" required>

        <p> <br> Organizacion </p>
        <select class="form-control form-control" id="sel-organizacion" name="organizacion" required>
            <option disabled value="" hidden selected> Seleccione una Organizacion </option>

            {{#each organizaciones}}
                <option value={{ id }}>{{ nombre }}</option>
            {{/each}}

        </select>

        <p> <br> Entidad Juridica Asociada </p>
        <select class="form-control form-control" id="sel-ent-juridica" name="entidad-juridica" required>
            <option disabled value="" hidden selected> Seleccione una Entidad Juridica </option>

            {{#each entidadesJuridicas}}
                <option value={{ id }}>{{ razonSocial }}</option>
            {{/each}}
        </select>

        <button type="submit" class="btn btn-primary">Cargar</button>
    </form>
    </div>
{{/partial}}

{{>layout.hbs}}